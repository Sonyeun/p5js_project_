let originalVector;
let orthogonalVector;

function setup() {
  createCanvas(400, 400);
  
  // 임의의 벡터 생성
  originalVector = createVector(2, 3);

  // 벡터 그리기
  drawVector(originalVector, "blue");

  // 직교하는 벡터 계산
  orthogonalVector = calculateOrthogonalVector(originalVector);

  // 직교하는 벡터 그리기
  drawVector(orthogonalVector, "red");

  // 결과 확인
  console.log("주어진 벡터:", originalVector);
  console.log("직교하는 벡터:", orthogonalVector);
}

function drawVector(vector, color) {
  stroke(color);
  strokeWeight(2);
  line(200, 200, 200 + vector.x * 20, 200 - vector.y * 20);
}

function calculateOrthogonalVector(v) {
  // 주어진 벡터에 직교하는 벡터는 (y, -x) 형태
  return createVector(v.y, -v.x);
}